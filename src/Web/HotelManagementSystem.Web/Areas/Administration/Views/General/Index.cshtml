@model AboutUsInfoInputModel
@{
this.ViewData["Title"] = "General";
}

<section id="general">

    <div class="content-header">
        <h1>Edit general information</h1>
    </div>

    <div class="welcome col-md-6">
        <form method="post">
            <div class="form-group row">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="justify-content-center">
                <button class="genric-btn primary mx-auto d-block">Apply changes</button>
            </div>
        </form>
    </div>
</section>
