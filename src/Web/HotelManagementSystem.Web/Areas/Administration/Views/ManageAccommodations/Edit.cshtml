@model AccommodationInputModel
@{
    this.ViewData["Title"] = "Edit";
}

<section id="general">

    <div class="content-header">
        <h1>Edit facility: <strong>@Model.Name</strong></h1>
    </div>

    <div class="welcome col-md-6">
        <form method="post">
            <div class="form-group row">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="AdditionalPrice"></label>
                <input asp-for="AdditionalPrice" class="form-control" />
                <span asp-validation-for="AdditionalPrice" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="justify-content-center">
                <button class="genric-btn primary mx-auto d-block">Apply changes</button>
            </div>
        </form>
    </div>
</section>
<br />