@model FacilityInputModel
@{
    this.ViewData["Title"] = "Edit";
}

<section id="general">

    <div class="content-header">
        <h1>Edit facility: <strong>@Model.Name</strong></h1>
    </div>

    <div class="welcome col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="PricePerDay"></label>
                <input asp-for="PricePerDay" class="form-control" />
                <span asp-validation-for="PricePerDay" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="IsAvailable" style="margin-right: 26px;"></label>
                @{

                    if (Model.IsAvailable)
                    {
                        <span class="input-radio-wrapper"><input class="input-radio-control" name="IsAvailable" type="radio" value="true" id="true_Id" checked /> Yes</span>
                        <span class="input-radio-wrapper"><input class="input-radio-control" name="IsAvailable" type="radio" value="false" id="false_Id" /> No</span>
                    }
                    else
                    {
                        <span class="input-radio-wrapper"><input class="input-radio-control" name="IsAvailable" type="radio" value="true" id="true_Id" /> Yes</span>
                        <span class="input-radio-wrapper"><input class="input-radio-control" name="IsAvailable" type="radio" value="false" id="false_Id" checked /> No</span>
                    }
                }
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="justify-content-center">
                <button class="genric-btn primary mx-auto d-block">Apply changes</button>
            </div>
        </form>
    </div>
</section>
<br />