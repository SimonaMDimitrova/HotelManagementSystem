@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<br />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h3 class="mb-30 title_color">Use your account to log in</h3>
                <div class="mt-10">
				    <input style="border: 1px solid #ced4da;" class="single-input-primary" placeholder="Email ..." asp-for="Input.Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
			    </div>

                <div class="mt-10">
				    <input style="border: 1px solid #ced4da;" class="single-input-primary" placeholder="Password ..." asp-for="Input.Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
			    </div>
                <hr />
                <div style="position: relative; left: 21px;">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 w-100 genric-btn primary" style="font-size: 20px;">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
